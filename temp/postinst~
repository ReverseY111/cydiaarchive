#!/bin/sh

chmod 777 /gfix/debs/reinstall.sh
chmod 644 /System/Library/LaunchDaemons/com.blackgeek.bootstrap.plist
chown root:wheel /System/Library/LaunchDaemons/com.blackgeek.bootstrap.plist
if [ -f "/System/Library/LaunchDaemons/com.blackgeek.gfix.plist" ]; then
    rm "/System/Library/LaunchDaemons/com.blackgeek.gfix.plist"
fi
echo "IMPORTANT: If after reboot your device goes in recovery mode again, click on Exit Recovery with Tiny Umbrella"

declare -a cydia
cydia=($CYDIA)
if [[ ${CYDIA+@} ]]; then
eval "echo 'finish:reboot' >&${cydia[0]}"
fi
