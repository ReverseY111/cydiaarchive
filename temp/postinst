#!/bin/bash
if [[ $1 == configure ]]; then
	echo - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
	echo Setting permissions...
	/bin/chown -R root:admin /Applications/HEX.app
	/bin/chmod -R 755 /Applications/HEX.app
	echo Permissions set!
	echo "Use respring (in SBSettings for example) if app icon didn't appear on the home screen"
	echo - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
fi
